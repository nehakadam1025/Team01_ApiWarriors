				{
					"name": "Get All Batches",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"const response = pm.response.json();",
									"",
									"// Test for response body structure",
									"pm.test(\"Response is an array\", function () {",
									"    pm.expect(response).to.be.an('array');",
									"});",
									"",
									"// Loop through each batch and check properties",
									"response.forEach(batch => {",
									"    pm.test(`Batch ID ${batch.batchId} has required fields`, function () {",
									"        pm.expect(batch).to.have.all.keys('batchId', 'batchName', 'batchDescription', 'batchStatus', 'batchNoOfClasses', 'programId', 'programName');",
									"    });",
									"});",
									"",
									"const jsonData = pm.response.json();",
									"const batches = jsonData || [];",
									"",
									"// Helper function to generate random letters",
									"function randomLetters(len) {",
									"    const letters = \"ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz\";",
									"    let s = \"\";",
									"    for (let i = 0; i < len; i++) {",
									"        s += letters.charAt(Math.floor(Math.random() * letters.length));",
									"    }",
									"    return s;",
									"}",
									"",
									"// Helper function to generate random numbers (1-99)",
									"function randomBatchNumber() {",
									"    return Math.floor(Math.random() * 99) + 1;",
									"}",
									"",
									"if (batches && batches.length > 0) {",
									"    // Filter active batches",
									"    const activeBatches = batches.filter(batch => ",
									"        batch.batchStatus && batch.batchStatus.toLowerCase() === 'active'",
									"    );",
									"",
									"    if (activeBatches && activeBatches.length > 0) {",
									"        // Sort by batchId",
									"        const sorted = activeBatches.sort((a, b) => a.batchId - b.batchId);",
									"        ",
									"        const timestamp = Date.now();",
									"        ",
									"        // For GET operations - use first batch",
									"        pm.environment.set(\"getBatchId\", sorted[0].batchId);",
									"        pm.environment.set(\"getBatchName\", sorted[0].batchName);",
									"        ",
									"        // For GET by Program ID",
									"        if (sorted[0].programId) {",
									"            pm.environment.set(\"getProgramIdForBatch\", sorted[0].programId);",
									"        }",
									"        ",
									"        // Store program name for creating batch names",
									"        if (sorted[0].programName) {",
									"            pm.environment.set(\"programNameForBatch\", sorted[0].programName);",
									"            const batchSeq = randomBatchNumber();",
									"            pm.environment.set(\"newBatchName\", `${sorted[0].programName}${batchSeq}`);",
									"            batchSeq1 = randomBatchNumber();",
									"            pm.environment.set(\"newBatchName4DescShort\", `${sorted[0].programName}${batchSeq1}`);",
									"            batchSeq2 = randomBatchNumber();",
									"            pm.environment.set(\"newBatchName4DescLong\", `${sorted[0].programName}${batchSeq2}`);",
									"        }",
									"        ",
									"        // For CREATE - generate unique batch data",
									"        pm.environment.set(\"newBatchDescription\", `Batch-${randomLetters(4)}`);",
									"        pm.environment.set(\"newBatchNoOfClasses\", Math.floor(Math.random() * 50) + 10); // 10-59 classes",
									"        pm.environment.set(\"newBatchStatus\", \"Active\");",
									"        pm.environment.set(\"newProgramId\", sorted[0].programId);",
									"        ",
									"        // For UPDATE operations - use second batch",
									"        if (sorted.length > 1) {",
									"            pm.environment.set(\"updateByBatchId\", sorted[1].batchId);",
									"            pm.environment.set(\"updateByBatchName\", sorted[1].batchName);",
									"            pm.environment.set(\"updatedBatchDescription\", `Updated-${timestamp}`);",
									"            pm.environment.set(\"updatedBatchNoOfClasses\", Math.floor(Math.random() * 50) + 10);",
									"            pm.environment.set(\"updateBatchStatus\", \"Active\");",
									"            pm.environment.set(\"updateProgramId\", sorted[1].programId);",
									"            pm.environment.set(\"updateProgramName\", sorted[1].programName);",
									"        }",
									"        ",
									"        // For DELETE operations - use last batch",
									"        if (sorted.length > 2) {",
									"            pm.environment.set(\"deleteBatchId\", sorted[sorted.length - 1].batchId);",
									"        }",
									"        ",
									"        console.log(\"‚úÖ Batch test data setup complete!\");",
									"        console.log(\"Total batches:\", batches.length);",
									"        console.log(\"Active batches:\", activeBatches.length);",
									"        console.log(\"New batch name:\", pm.environment.get(\"newBatchName\"));",
									"    } else {",
									"        console.log(\"‚ö†Ô∏è No active batches found!\");",
									"    }",
									"} else {",
									"    console.log(\"‚ö†Ô∏è No batches returned in response!\");",
									"}",
									"",
									"// Test assertions",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response is an array\", function () {",
									"    pm.expect(batches).to.be.an('array');",
									"});",
									"",
									"pm.test(\"Batches contain required fields\", function () {",
									"    if (batches.length > 0) {",
									"        pm.expect(batches[0]).to.have.property('batchId');",
									"        pm.expect(batches[0]).to.have.property('batchName');",
									"        pm.expect(batches[0]).to.have.property('programId');",
									"        pm.expect(batches[0]).to.have.property('batchStatus');",
									"    }",
									"});",
									""
								],
